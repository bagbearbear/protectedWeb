	<!-- SQL : UPDATE -->	 
	 <update	id="updateFunding"	parameterType="funding" >
	   	UPDATE STORYFUNDING
	   	<set>
	   		PHONE       	   = #{phone:VARCHAR} ,
			POST_TITLE	       = #{postTitle:VARCHAR},
			POST_CONTENT 	   = #{postContent:VARCHAR} ,
			FUND_TARGET_PAY	   = #{fundTargetPay:NUMERIC},
			FUND_TARGET_DAY    = #{fundTargetDay:NUMERIC},
			VOTE_TARGET_COUNT  = #{voteTargetCount:NUMERIC},
			FUND_END_DATE      = SYSDATE+31+#{fundTargetDay}
	   	</set>
	   	WHERE POST_NO IN #{postNo} 
	 </update>
